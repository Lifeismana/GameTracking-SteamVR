{
	"profiles" : [
		[ "generic" ]
	],
    "action_binds": [
        {
            "action": "/actions/system/SystemButtonChord",
            "source": "/filters/system_button/held"
        },
        {
            "action": "/actions/system/ToggleDashboard",
            "source": "/filters/system_button/single"
        },
        {
            "action": "/actions/system/TakeScreenshot",
            "source": "/filters/screenshot_chord/result"
        },
        {
            "action": "/actions/system/ShowPowerMenu",
            "source": "/filters/system_button/long"
        },
        {
            "action": "/actions/system/ToggleRoomView",
            "source": "/filters/system_button/double"
        },
        {
            "action": "/actions/lasermouse/Pointer",
            "source": "/filters/lasermouse_tip/pose"
        },
        {
            "action": "/actions/lasermouse/LeftClick",
            "source": "/user/hand/primary/input/trigger/click"
        },
        {
            "action": "/actions/lasermouse/Back",
            "source": "/user/hand/primary/input/grip/click"
        },
        {
            "action": "/actions/lasermouse/Home",
            "source": "/user/hand/primary/input/application_menu/click"
        },
        {
            "action": "/actions/lasermouse/SwitchLaserHand",
            "source": "/user/hand/secondary/input/trigger/click"
        },
        {
            "action": "/actions/dualanalog/LeftValue",
            "source": [ "/user/hand/left/input/trackpad/x", "/user/hand/left/input/trackpad/y" ]
        },
        {
            "action": "/actions/dualanalog/RightValue",
            "source": [ "/user/hand/right/input/trackpad/x", "/user/hand/right/input/trackpad/y" ]
        },
        {
            "action": "/actions/dualanalog/LeftTouch",
            "source": "/user/hand/left/input/trackpad/touch"
        },
        {
            "action": "/actions/dualanalog/RightTouch",
            "source": "/user/hand/right/input/trackpad/touch"
        },
        {
            "action": "/actions/dualanalog/LeftClick",
            "source": "/user/hand/left/input/trackpad/click"
        },
        {
            "action": "/actions/dualanalog/RightClick",
            "source": "/user/hand/right/input/trackpad/click"
        },
        {
            "action": "/actions/dualanalog/ModeSwitch1",
            "source": "/user/hand/left/input/grip/click"
        },
        {
            "action": "/actions/dualanalog/ModeSwitch2",
            "source": "/user/hand/right/input/grip/click"
        }
    ],

	"filters" :[
		{
			"name" : "system_button",
			"type" : "boolean_button_press_state",
			"input" : "/devices/*/input/system/click",
			"action_sets" : [ "/actions/normal", "/actions/chord", "/actions/lasermouse", "/actions/dualanalog" ],
			"cancel_on_action_sets" : [ "/actions/chord" ],
			"parameters" : 
			{
				"long_press_delay" : 1.5
			},
			"output" : 							 
			{
				"long" : "long",
				"double" : "double",
				"single" : "single",
				"held" : "held"
			}
		},
		{
			"name" : "screenshot_chord",
			"type" : "boolean_and",
			"action_sets" : [ "/actions/chord" ],
			"input" : 
			{
				"1":"/filters/system_button/held",
				"2":"/user/hand/*/input/trigger/click"
			},
			"output" : "result"
		},
		{
			"name" : "lasermouse_tip",
			"type" : "pose_component",
			"input" : "/user/hand/primary/pose",
			"output" : "pose",
			"parameters" : 
			{
				"component_name" : "tip"
			}
		}
	]
}
