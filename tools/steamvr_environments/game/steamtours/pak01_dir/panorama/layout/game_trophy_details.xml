<root>
	<styles>
		<include src="s2r://panorama/styles/base_styles.vcss_c" />
		<include src="s2r://panorama/styles/game_trophy.vcss_c" />
	</styles>

	<scripts>
		<include src="s2r://panorama/scripts/game_trophy.vjs_c" />
	</scripts>

	<GameTrophyDetailsPanel>
		<Panel class="GameTrophyContainer" hittest="0" onload="OnLoadDetailsPanel()">

			<Panel class="GameDetails" acceptsfocus="true">

				<Panel id="AppTitlePanel" class="DetailPanel DetailButton AppTitle">
					<Label class="AppName" text="#GameTrophy_AppName" />
				</Panel>

				<Panel class="SpacerPanel" />

				<Panel id="OwnerDetailsPanel" class="DetailPanel DetailButton">
					<Panel class="OwnerWrapper">					
						<Image id="OwnerAvatar" class="OwnerAvatar" src="s2r://panorama/images/content_browser/avatar_default_image_png.vtex" />
						<Panel class="OwnerDetails">
							<Label class="OwnerName" text="#GameTrophy_OwnerName" />
							<Label class="Playtime" text="#GameTrophy_Playtime" />
						</Panel>
					</Panel>

					<Panel class="BadgeDetails">
						<Image id="BadgeIcon" class="BadgeIcon" src="s2r://panorama/images/content_browser/avatar_default_image_png.vtex" />
						<Panel class="OwnerDetails">
							<Label class="BadgeName" text="#GameTrophy_BadgeName" />
							<Label id="FoilBadgeLabel" class="BadgeLevel" text="#GameTrophy_Foil_BadgeLevel" />
							<Label id="NormalBadgeLabel" class="BadgeLevel" text="#GameTrophy_Normal_BadgeLevel" />
						</Panel>							
					</Panel>
				</Panel>

				<Panel class="SpacerPanel" />

				<Panel id="AchievementsPanel" class="DetailPanel DetailButton AchievementsPanel">
					<Label class="DetailsLabel" text="#GameTrophy_Achievements_Label" />
					<Panel class="AchievementProgressWrapper">
						<Panel id="AchievementProgress" class="AchievementProgress" />
						<Label class="Achievements" text="#GameTrophy_Achievements" />
					</Panel>
				</Panel>

				<Panel class="SpacerPanel" />

				<Panel id="ScreenshotsContainer" class="DetailPanel DetailButton">
					<Label class="DetailsLabel" text="#GameTrophy_Screenshots_Label" />	
					<Panel class="ScreenshotPanel">
						<Image class="TrophyScreenshot" id="Screenshot1" src="s2r://panorama/images/content_browser/avatar_default_image_png.vtex" scaling="stretch-to-cover-preserve-aspect" />
						<Image class="TrophyScreenshot" id="Screenshot2" src="s2r://panorama/images/content_browser/avatar_default_image_png.vtex" scaling="stretch-to-cover-preserve-aspect" />
						<Image class="TrophyScreenshot" id="Screenshot3" src="s2r://panorama/images/content_browser/avatar_default_image_png.vtex" scaling="stretch-to-cover-preserve-aspect" />
					</Panel>
				</Panel>

				<Panel id="NoScreenshotsContainer" class="DetailPanel DetailButton">
					<Label class="DetailsLabel" text="#GameTrophy_Screenshots_Label" />	
					<Label class="NoScreenshotsLabel" text="#GameTrophy_No_Screenshots" />	
				</Panel>

				<Panel class="SpacerPanel" />
				<Panel class="SpacerPanel" />

				<Panel class="PlayButton" onactivate="LaunchApp()">
					<Label text="#GameTrophy_PlayButton" id="PlayButtonLabel" />
				</Panel>

				<Panel class="SpacerPanel" />

			</Panel>
			
			<Panel class="CloseButton" onactivate="HideDetails()">
				<Label text="#GameTrophy_CloseButton" />
			</Panel>

		</Panel>
	</GameTrophyDetailsPanel>
</root>
