<root>
	<styles>
		<include src="s2r://panorama/styles/base_styles.vcss_c" />
		<include src="s2r://panorama/styles/friends.vcss_c" />
	</styles>

	<LobbyItem class="LobbyItem">
		<Panel class="LobbyItemInfo">
			<Image class="LobbyThumb" id="LobbyThumb" />
				<!--thumbnail from the lobby's Destination-->
			<Panel class="LobbyItemRight">
				<Label class="LobbyDestinationItem" text="#Lobby_Destination" />
				<Panel class="LobbyInfo">
					<Label class="LobbyMemberLabel" id="InPublicRoom" text="#Lobby_PublicRoom" />
					<Label class="LobbyMemberLabel" id="InFriendsRoom" text="#Lobby_FriendsRoom" />
					<Label class="LobbyMemberLabel" id="LobbyOwnerName" text="#Lobby_OwnerName" />
                    <Label class="LobbyMemberLabel" id="InLobbyDestination" text="#InLobby_Destination" />
                    <Panel class="LobbyMembers" id="LobbyMemberCounts">
                        <Label class="LobbyMemberLabel" id="MemberCount" text="#Lobby_MemberCount" />
                        <Label class="LobbyMemberLabel" id="FriendCount" text="#Lobby_FriendCount" />
<!--					<Label class="OwnerLocation" text="#Lobby_OwnerLocation" /> -->
                    </Panel>
				</Panel>
			</Panel>
		</Panel>
		<Panel class="LobbyControls">
			<Button class="LobbyButton" id="JoinButton" onactivate="JoinLobby();" mousecanactivate="unfocused" >
				<Label class="LobbyButtonLabel" text="#Lobby_Join" />
			</Button>
			<Panel class="JoinControllerHint">
                <Panel class="XButton">
                    <Label text="X" />
                </Panel> 
                <Label class="ControllerHintLabel" text="#Controller_Join" />
			</Panel>
		</Panel>
		<Panel class="DownloadingDestinationDetails">
			<Panel class="HorizontalDivider" />
			<Label class="LobbyDownloading" text="#Lobby_Downloading" />
		</Panel>		
	</LobbyItem>
</root>
