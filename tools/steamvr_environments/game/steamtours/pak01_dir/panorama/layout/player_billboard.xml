<root>
	<styles>
		<include src="s2r://panorama/styles/base_styles.vcss_c" />
		<include src="s2r://panorama/styles/player_billboard.vcss_c" />
	</styles>

	<ClientUIDialogPanel>
			<SteamToursPlayerBillboard class="PlayerBillboard" id="PlayerBillboard">
				<Image class="HostHat" src="s2r://panorama/images/content_browser/host_hat_png.vtex" />
				<Panel class="PlayerPanel">
					<Panel class="PlayerAvatarPanel">
						<Image class="BackupIcon" src="s2r://panorama/images/content_browser/destination_button_image_png.vtex" />
						<Image id="PlayerAvatarImage" class="PlayerAvatarImage" />
						<Image id="SpeakingIcon" class="SpeakingIcon" src="s2r://panorama/images/content_browser/icon_speaking_png.vtex" />
						<Image id="MutedIcon" class="MutedIcon" src="s2r://panorama/images/content_browser/icon_muted_png.vtex" />
						<Image id="RedMutedIcon" class="RedMutedIcon" src="s2r://panorama/images/content_browser/icon_muted_red_png.vtex" />
					</Panel>
					<Button class="PlayerNamePanel" onactivate="OpenUserDetail()">
						<Label class="PlayerName" text="#PlayerBillboard_Name" />
						<Label class="ClickLabel" text="#PlayerBillboard_Click" />
					</Button>
				</Panel>
		</SteamToursPlayerBillboard>
	</ClientUIDialogPanel>
</root>

