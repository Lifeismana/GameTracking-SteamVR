<root>
	<styles>
		<include src="s2r://panorama/styles/base_styles.vcss_c" />
		<include src="s2r://panorama/styles/welcome_panel.vcss_c" />
	</styles>

	<snippets>
		<snippet name="WorkshopSlideshowItem">
			<Panel class="WorkshopItem">
				<Panel class="UpdateDescArea">
					<Label class="UpdateDesc" text="#WelcomePanel_UpdateDesc" />
					<Label class="UpdateDescController" text="#WelcomePanel_UpdateDescController" />
					<Label class="UpdateDescTouch" text="#WelcomePanel_UpdateDescTouch" />
          <Label class="UpdateDescKnuckles" text="#WelcomePanel_UpdateDescKnuckles" />
        </Panel>
				<Panel class="Slideshow_Wrapper">
					<Panel class="Slideshow">
						<Image id="WorkshopImage" class="SlideshowImage"/>	
					</Panel>
					<Label class="UpdateText" text="#WelcomePanel_UpdateText" />
				</Panel>					


			</Panel>
		</snippet>
	</snippets>

	<ClientUIDialogPanel>
		<DestinationsWelcomePanel>
			<Panel class="WelcomeTop">
				<Image class="Destinations_Title" src="s2r://panorama/images/welcome_panel/destinations_title_large_png.vtex" />	
			</Panel>
			
			<Panel class="WelcomeBottom">
				<Panel class="TextArea">
					<Label class="PressMenuButton" text="#WelcomePanel_PressMenuButton" />
          <Label class="PressBOrYButton" text="#WelcomePanel_PressBOrYButton" />
          <Label class="PressBButton" text="#WelcomePanel_PressBButton" />
					<Label class="PressYButton" text="#WelcomePanel_PressYButton" />
				</Panel>
				<Panel class="ImageRight">
					<Image class="MotionController" src="s2r://panorama/images/welcome_panel/destinations_welcome_black_png.vtex" />	
					<Image class="TouchImage" src="s2r://panorama/images/welcome_panel/destinations_welcome_black_touch_png.vtex" scaling="stretch-to-fit-preserve-aspect" />
          <Image class="WinMRImage" src="s2r://panorama/images/welcome_panel/destinations_welcome_black_winmr_png.vtex" scaling="stretch-to-fit-preserve-aspect" />
          <Image class="KnucklesImage" src="s2r://panorama/images/welcome_panel/destinations_welcome_black_knuckles_png.vtex" />
          <Image class="Controller" src="s2r://panorama/images/welcome_panel/destinations_welcome_black_controller_png.vtex" />	
				</Panel>	
			</Panel>
			
			<Panel class="UpdatesBottom">
				<Panel id="WorkshopItemsContainer" class="WorkshopItemsContainer">
				</Panel>
			</Panel>
			
		</DestinationsWelcomePanel>
	</ClientUIDialogPanel>
</root>
