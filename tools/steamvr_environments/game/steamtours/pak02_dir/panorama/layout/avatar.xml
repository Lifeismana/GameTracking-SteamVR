
<root>
	<styles>
		<include src="s2r://panorama/styles/base_styles.vcss_c" />
		<include src="s2r://panorama/styles/content_browser.vcss_c" />
	</styles>

	<script>

		function HideAvatarDashboard()
		{
			$.DispatchEvent( "HideAvatarCustomization" );
			$.DispatchEvent( "ShowDashboard" );
		}

		function HideAvatarDashboardAndShowContentItems( section )
		{
			$.DispatchEvent( "HideAvatarCustomization" );
			$.DispatchEvent( "ShowContentItems", section );
		}
		
		function HideAvatarDashboardAndEditWearables()
		{
			$.DispatchEvent( "HideAvatarCustomization" );
			$.DispatchEvent( "EnterWearableEditMode" );
		}
		

	</script>

  <SteamToursAvatarCustomization tabindex="auto" selectionpos="auto">

		<Panel class="AvatarDashboardTitle" >
			<Button class="BackButton" id="AvatarDashboardBack" onactivate="HideAvatarDashboard(); " >
				<Image class="ScrollButtonImage" src="s2r://panorama/images/content_browser/scroll_down_png.vtex" />
				<Label class="BackButtonText" text="#BackButtonText" />
			</Button>			
	
			<Label class="ItemDetailTitle" text="#BrowseAvatarsTitle" />
			<DropDown class="AvatarOutfitsDropDown DestinationButton" id="OutfitsDropDown">
			</DropDown>
		</Panel>

		<Panel class="AvatarMain CustomHeadSelected" id="AvatarMain">

				<Panel class="AvatarContainerHead" id="AvatarContainerHead">
					<Panel class="BigCustomizeButton" id="ChangeHeadButton" onactivate="HideAvatarDashboardAndShowContentItems('AvatarHeads');">
						<Image id="CurrentAvatarHead" class="CurrentHead" src="s2r://panorama/images/contentdb/head_a_thumb_png.vtex" />
						<Panel class="BigButtonGradient" />
						<Label class="AvatarType" text="#Avatar_CurrentHead" />
						<Label class="BigButtonLabel" text="#ChangeHeadButton" />
					</Panel>	

		            <Panel class="AvatarContentContainer">
						<Label class="AdjustColor" text="#Avatar_AdjustColor" />
		                <Panel class="ContentContainer" id="ContentContainer" tabindex="auto" selectionpos="auto" rememberchildfocus="true" />
		            </Panel>
				</Panel>
	
				<Panel class="AvatarContainerHands" id="AvatarContainerHands">
					<Panel class="BigCustomizeButton" id="ChangeHandsButton" onactivate="HideAvatarDashboardAndShowContentItems('AvatarHands');">
						<Image id="CurrentAvatarHands" class="CurrentHands" src="s2r://panorama/images/contentdb/default_hands_png.vtex" />x
						<Panel class="BigButtonGradient" />
						<Label class="AvatarType" text="#Avatar_CurrentHands" />
						<Label class="BigButtonLabel" text="#ChangeHandsButton" />
					</Panel>
		            <Panel class="AvatarContentContainer">
		                <Panel class="ContentContainer" id="ContentContainer" tabindex="auto" selectionpos="auto" rememberchildfocus="true" />	
		            </Panel>
				</Panel>
				
				<Panel class="AvatarContainerWearables" id="AvatarContainerWearables">
					<Panel class="BigCustomizeButton" id="AddWearablesButton" onactivate="HideAvatarDashboardAndEditWearables();"> 
						<Image id="CurrentWearablesImage" class="CurrentWearables" src="s2r://panorama/images/content_browser/dashboard_personalize_icon_png.vtex" scaling="stretch-to-fit-preserve-aspect" />
						<Panel class="BigButtonGradient" />
						<Label class="BigButtonLabel" text="#AddWearablesButton" />		
					</Panel>									
					<Label class="WearablesDescription" text="#Wearables_Description" />
				</Panel>
		</Panel>
		
  </SteamToursAvatarCustomization>

</root>
