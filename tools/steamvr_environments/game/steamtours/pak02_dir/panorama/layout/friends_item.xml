<root>
	<styles>
		<include src="s2r://panorama/styles/base_styles.vcss_c" />
		<include src="s2r://panorama/styles/friends.vcss_c" />
	</styles>

	<FriendsItem class="FriendsItem">
		<Panel class="FriendsItemInfo">
			<Image class="FriendsAvatar" id="FriendsAvatar" />
			<Panel class="FriendsItemRight">
				<Panel class="FriendNames">
					<Label class="FriendsName" text="#Friends_Name" />
					<Label class="FriendsNick" text="#Friends_NickName" />
				</Panel>
		        <Label class="IsTheHost" text="#Friends_IsHost" />
		        <Label class="FriendStatus" text="#Friends_Offline" id="FriendStatus" />
		        <Label class="FriendDestination" text="#Friends_Destination" id="FriendDestination" />
		        <!-- <Label class="FriendAppTitle" text="#Friends_App_Title" id="FriendAppTitle" /> -->
		        <Label class="FriendInvited" text="#Friends_Invited" />
	      	</Panel>
		</Panel>
		<Panel class="LobbyControls">
			<Label class="FriendLobbyInvite" text="#Friends_LobbyInvite" />
			<Button class="FriendButton" id="FriendAcceptButton" onactivate="AcceptInvite();" mousecanactivate="unfocused" >
				<Label class="FriendsInvite" text="#Friends_Button_AcceptInvite" />
			</Button>
			<Button class="FriendButton" id="FriendDeclineButton" onactivate="DeclineInvite();" mousecanactivate="unfocused" >
				<Label class="FriendsInvite" text="#Friends_Button_DeclineInvite" />
			</Button>
			<Panel class="InviteControllerHint">
				<Panel class="ControllerHintAccept">
					<Panel class="XButton">
						<Label text="X" />
					</Panel> 
					<Label class="ControllerHintLabel" text="#Controller_AcceptInvite" />
				</Panel>				
				<Panel class="ControllerHintIgnore">
					<Panel class="BButton">
						<Label text="B" />
					</Panel>
					<Label class="ControllerHintLabel" text="#Controller_DeclineInvite" />
				</Panel>
			</Panel>
		</Panel>
		<Panel class="DownloadingDestinationDetails">
			<Label class="FriendDownloading" text="#Friends_Downloading" />
		</Panel>		
	</FriendsItem>
</root>
