<root>
	<styles>
		<include src="s2r://panorama/styles/base_styles.vcss_c" />
		<include src="s2r://panorama/styles/recent_apps.vcss_c" />
	</styles>

	<snippets>
		<snippet name="RecentAppsItem">
			<RecentAppsItem class="RecentAppsItem">
				<Image class="DefaultRecentAppImage" src="s2r://panorama/images/content_browser/icon_recent_default_png.vtex" />
				<Image class="RecentAppsItemImage" id="RecentAppsItemImage" />
				<Panel class="AppLabel">
					<Panel class="LabelBack" />
					<Label class="RecentAppName" text="#App_Name" id="RecentAppName" />
				</Panel>
			</RecentAppsItem>
		</snippet>
	</snippets>

	<SteamToursRecentApps class="RecentApps" tabindex="auto" selectionpos="auto">
		
		<Panel class="RecentAppsTitleBar" id="RecentAppsTitleBar">
			<!--<Image class="PlayerAvatar" id="PlayerAvatar" src="s2r://panorama/images/content_browser/avatar_toggle_button_color_png.vtex" />	-->
			<Label class="RecentApps_Title" text="#RecentApps_Title" />
		</Panel>

		<Panel class="RecentAppsContainer" id="RecentAppsContainer">
			<Panel class="ContentContainer" id="RecentAppsContentContainer" tabindex="auto" selectionpos="auto" rememberchildfocus="true" />
		</Panel>

		<Panel class="BottomGradient" />

		<Panel class="WelcomeBottom">
			<Label class="WelcomeTitle" text="#Destinations_WelcomeText" />
			<Panel class="TextArea">
				<Label class="PressMenuButton" text="#FirstTimePanel_PressMenuButton" />
				<Label class="PressBButton" text="#FirstTimePanel_PressBButton" />
				<Label class="PressYButton" text="#FirstTimePanel_PressYButton" />
			</Panel>
			<Panel class="ImageRight">
				<Image class="MotionController" src="s2r://panorama/images/welcome_panel/destinations_welcome_black_png.vtex" />	
				<Image class="TouchImage" src="s2r://panorama/images/welcome_panel/destinations_welcome_black_touch_png.vtex" scaling="stretch-to-fit-preserve-aspect" />	
				<Image class="Controller" src="s2r://panorama/images/welcome_panel/destinations_welcome_black_controller_png.vtex" />	
				<Panel class="GlowAnim" />
			</Panel>	
		</Panel>

		<Panel class="BlackOut" />
		
		<Panel class="ConfirmationPanel">
			<Image class="DefaultLaunchAppImage" src="s2r://panorama/images/content_browser/icon_recent_default_png.vtex" />
			<Image class="LaunchAppImage" id="LaunchAppImage" />
			<Label class="LaunchConfirmation" text="#LaunchConfirmationText" id="RecentAppName" />
			<Button class="DestinationButton LaunchButton" id="LaunchAppButton" onactivate="LaunchSelectedApplication()">
				<Label text="#LaunchButtonText" />
			</Button>
			<Button class="DestinationButton DetailsButton" onactivate="ViewSelectedApplicationDetails()">
				<Label text="#DetailsButtonText" />
			</Button>
			<Button class="DestinationButton CancelButton" onactivate="LaunchApplicationCancel()">
				<Label text="#CancelButtonText" />
			</Button>
		</Panel>

		<Panel class="NoAppsState">
			<Label class="NoAppsTitle" text="#NoAppsTitle" />
			
			<Label class="NoAppsText" text="#NoAppsText1" />
			<Label class="NoAppsText" text="#NoAppsText2" />
			<Button class="DestinationButton BrowseSteam" onactivate="ViewAllApplications()">
				<Image class="SteamLogo" src="s2r://panorama/images/content_browser/steam_logo_png.vtex" />	
				<Label text="#SteamButtonText" />
			</Button>
		</Panel>
				
		<Panel class="NoSteamState">
			<Image class="SteamLogo" src="s2r://panorama/images/content_browser/steam_logo_png.vtex" />
			<Label class="NoSteamText1" text="#NoSteamText1" />	
			<Label class="NoSteamText2" text="#NoSteamText2" />			
		</Panel>

	</SteamToursRecentApps>
	

</root>
