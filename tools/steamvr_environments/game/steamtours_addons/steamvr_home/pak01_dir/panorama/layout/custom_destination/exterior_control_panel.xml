<root>
	<styles>
		<include src="s2r://panorama/styles/custom_destination/control_panel.vcss_c" />
		<include src="s2r://panorama/styles/base_styles.vcss_c" />
		<include src="s2r://panorama/styles/info_panels.vcss_c" />
	</styles>
	<scripts>
		<include src="s2r://panorama/scripts/custom_destination/exterior_control_panel.vjs_c" />
	</scripts>
	<script>

		function ClearRoomClasses()
		{
			$( "#BackgroundPanel" ).RemoveClass( "Mountains" );
			$( "#BackgroundPanel" ).RemoveClass( "Shore" );	
			$( "#BackgroundPanel" ).RemoveClass( "Desert" );					
			$( "#BackgroundPanel" ).RemoveClass( "Night" );
		}	

		function LoadMountains()
		{
			ClearRoomClasses()
			$.Msg("Loading Mountains");
			$( "#BackgroundPanel" ).AddClass( "Mountains" );
			$.DispatchEvent( "ClientUI_FireOutput", '0' );
		}

		function LoadShore()
		{
			ClearRoomClasses()
			$.Msg("Loading Shore");
			$( "#BackgroundPanel" ).AddClass( "Shore" );
			$.DispatchEvent( "ClientUI_FireOutput", '1' );
		}

		function LoadDesert()
		{
			ClearRoomClasses()
			$.Msg("Loading Desert");
			$( "#BackgroundPanel" ).AddClass( "Desert" );
			$.DispatchEvent( "ClientUI_FireOutput", '2' );
		}

		function LoadNight()
		{
			ClearRoomClasses()
			$.Msg("Loading Night");
			$( "#BackgroundPanel" ).AddClass( "Night" );
			$.DispatchEvent( "ClientUI_FireOutput", '3' );
		}

	</script>
	<Panel class="InWorldDirectionPagePanel">
		<Panel id="InstructionPanel" class="Instruction" >
			<Label id="InstructionText" text="#VRHome_Sky_Change" />
		</Panel>
		<Panel class="test" />
		<Panel id="BackgroundPanel" class="Control Mountains" defaultfocus="MountainButton" tabindex="auto" selectionpos="auto">
			
			<Panel class="RoomButtonPanel">
				<Button class="RoomButton" id="MountainButton" onactivate="LoadMountains();">
					<Image class="ButtonImage" src="s2r://panorama/images/custom_destination/icon_mountains_png.vtex" />
				</Button>			
				<Button class="RoomButton" id="ShoreButton" onactivate="LoadShore();">
					<Image class="ButtonImage" src="s2r://panorama/images/custom_destination/icon_shore_png.vtex" />
				</Button>			
				<Button class="RoomButton" id="DesertButton" onactivate="LoadDesert();">
					<Image class="ButtonImage" src="s2r://panorama/images/custom_destination/icon_desert_png.vtex" />
				</Button>			
				<Button class="RoomButton" id="NightButton" onactivate="LoadNight();">
					<Image class="ButtonImage" src="s2r://panorama/images/custom_destination/icon_night_png.vtex" />
				</Button>		
			</Panel>		

			<Button class="InfoButton" onactivate="AddStyle(BackgroundPanel,InfoPanelOn);">
	            <Image class="ScrollButtonImage" src="s2r://panorama/images/content_browser/icon_favorite_png.vtex" />
			</Button>

			<Panel class="InfoPanel">
				<Label id="InstructionText" text="#VRHome_Background_Title" />
	            <Button class="BackButton" onactivate="RemoveStyle(BackgroundPanel,InfoPanelOn);">
	                <Image class="ScrollButtonImage" src="s2r://panorama/images/content_browser/icon_unsubscribe_png.vtex" />
	            </Button>
				<Image class="InfoImageBackground" src="s2r://panorama/images/custom_destination/icon_mountains_png.vtex" />
				<Label class="InfoText" text="#VRHome_Background_Desc" />
			</Panel> 
	
		</Panel>

	</Panel>

