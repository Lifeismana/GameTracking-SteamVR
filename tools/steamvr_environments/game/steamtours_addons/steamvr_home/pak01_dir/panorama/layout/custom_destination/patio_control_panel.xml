<root>
	<styles>
		<include src="s2r://panorama/styles/custom_destination/control_panel.vcss_c" />
		<include src="s2r://panorama/styles/base_styles.vcss_c" />
		<include src="s2r://panorama/styles/info_panels.vcss_c" />
	</styles>
	<scripts>
		<include src="s2r://panorama/scripts/custom_destination/patio_control_panel.vjs_c" />
	</scripts>
<script>

		function ClearRoomClasses()
		{
			$( "#PatioPanel" ).RemoveClass( "Nothing" );
			$( "#PatioPanel" ).RemoveClass( "Pagoda" );	
			$( "#PatioPanel" ).RemoveClass( "Birdbath" );					
			$( "#PatioPanel" ).RemoveClass( "Statue" );
		}	

		function LoadNothing()
		{
			ClearRoomClasses()
			$.Msg("Loading Nothing");
			$( "#PatioPanel" ).AddClass( "Nothing" );
			$.DispatchEvent( "ClientUI_FireOutput", '0' );
		}

		function LoadPagoda()
		{
			ClearRoomClasses()
			$.Msg("Loading Pagoda");
			$( "#PatioPanel" ).AddClass( "Pagoda" );
			$.DispatchEvent( "ClientUI_FireOutput", '1' );
		}

		function LoadBirdbath()
		{
			ClearRoomClasses()
			$.Msg("Loading Birdbath");
			$( "#PatioPanel" ).AddClass( "Birdbath" );
			$.DispatchEvent( "ClientUI_FireOutput", '2' );
		}

		function LoadStatue()
		{
			ClearRoomClasses()
			$.Msg("Loading Statue");
			$( "#PatioPanel" ).AddClass( "Statue" );
			$.DispatchEvent( "ClientUI_FireOutput", '3' );
		}

	</script>
	<Panel class="InWorldDirectionPagePanel">
		<Panel id="InstructionPanel" class="Instruction" >
			<Label id="InstructionText" text="#VRHome_Patio_Change" />
		</Panel>
		<Panel class="test" />
		<Panel id="PatioPanel" class="Control Nothing" defaultfocus="NothingButton" tabindex="auto" selectionpos="auto">
			
			<Panel class="RoomButtonPanel">
				<Button class="RoomButton" id="NothingButton" onactivate="LoadNothing();">
					<Image class="ButtonImage" src="s2r://panorama/images/custom_destination/icon_nothing_png.vtex" />
				</Button>			
				<Button class="RoomButton" id="PagodaButton" onactivate="LoadPagoda();">
					<Image class="ButtonImage" src="s2r://panorama/images/custom_destination/icon_pagoda_png.vtex" />
				</Button>			
				<Button class="RoomButton" id="BirdbathButton" onactivate="LoadBirdbath();">
					<Image class="ButtonImage" src="s2r://panorama/images/custom_destination/icon_birdbath_png.vtex" />
				</Button>			
				<Button class="RoomButton" id="StatueButton" onactivate="LoadStatue();">
					<Image class="ButtonImage" src="s2r://panorama/images/custom_destination/icon_statue_png.vtex" />
				</Button>		
			</Panel>		

			<Button class="InfoButton" onactivate="AddStyle(PatioPanel,InfoPanelOn);">
	            <Image class="ScrollButtonImage" src="s2r://panorama/images/content_browser/icon_info_png.vtex" />
			</Button>

			<Panel class="InfoPanel">
				<Label id="InstructionText" text="#VRHome_Patio_Title" />
	            <Button class="BackButton" onactivate="RemoveStyle(PatioPanel,InfoPanelOn);">
	                <Image class="ScrollButtonImage" src="s2r://panorama/images/content_browser/icon_unsubscribe_png.vtex" />
	            </Button>
				<Image class="InfoImagePatio" src="s2r://panorama/images/content_browser/save_icon_png.vtex" />
				<Label class="InfoText" id="patioInfoText" text="#VRHome_Patio_Desc" />
			</Panel> 
	
		</Panel>

	</Panel>	
